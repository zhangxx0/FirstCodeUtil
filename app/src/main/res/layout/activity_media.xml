<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <Button
        android:id="@+id/media_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification"/>

    <Button
        android:id="@+id/media_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMS"/>

    <Button
        android:id="@+id/media_playaudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PlayAudio"/>
    <Button
        android:id="@+id/media_playvideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PlayVideo"/>
    <Button
        android:id="@+id/media_Choosepic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ChoosePic"/>

</LinearLayout>