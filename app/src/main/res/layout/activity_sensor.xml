<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/sensor_accelerometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelerometer 加速度" />

    <Button
        android:id="@+id/sensor_compass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compass 罗盘" />

    <Button
        android:id="@+id/sensor_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Light 光线" />

    <TextView
        android:id="@+id/sensor_light_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="光强：" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/compass_img"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/compass" />

        <ImageView
            android:id="@+id/arrow_img"
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/arrow" />
    </RelativeLayout>

</LinearLayout>